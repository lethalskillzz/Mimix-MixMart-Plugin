<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	>


<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="@drawable/round_grey_corners"
android:orientation="horizontal"
android:padding="4dp"
android:descendantFocusability="blocksDescendants"
>

<ImageView
    android:id="@+id/commrow_img"
    android:layout_width="75dip"
    android:layout_height="75dip"
    android:layout_gravity="center_vertical"
    android:layout_marginRight="4dip"
    android:scaleType="centerCrop" />

<LinearLayout
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:padding="4dip"
android:orientation="vertical"
>

    <TextView
    android:id="@+id/commrow_date"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:ellipsize="end"
    android:singleLine="true"
    android:textColor="#5a5a60"
    android:textSize="12sp"
    android:textStyle="italic"  />

    <TextView
        android:id="@+id/commrow_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:autoLink="web"
        android:ellipsize="end"
        android:textSize="16sp"
        />

<TextView
    android:id="@+id/commrow_user"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:layout_weight="1"
    android:ellipsize="end"
    android:singleLine="true"
    android:textSize="14sp"
    android:textStyle="italic"
    android:textColorLink="#2f6699"
    />


   <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:layout_gravity="right"
    android:orientation="horizontal"
    >
    
    <ImageView 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="-12.5dp"
    android:layout_marginTop="-10.5dp"
    android:scaleType="fitXY"
    android:src="@drawable/ic_naira"
    />
        

 <TextView
    android:id="@+id/commrow_price"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:ellipsize="end"
    android:singleLine="true"
    android:textColor="#55b948"
    android:textSize="20sp"
    android:textStyle="bold" />
    

</LinearLayout>


</LinearLayout>

</LinearLayout>

</FrameLayout>
